<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarqueeViewStyle">
        <attr name="eInterval" format="integer|reference"/>
        <attr name="eAnimDuration" format="integer|reference"/>
        <attr name="eTextSize" format="dimension|reference"/>
        <attr name="eTextColor" format="color|reference"/>
        <attr name="eSingleLine" format="boolean"/>
        <attr name="eFont" format="reference"/>
        <attr name="eGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="eDirection">
            <enum name="bottom_to_top" value="0"/>
            <enum name="top_to_bottom" value="1"/>
            <enum name="right_to_left" value="2"/>
            <enum name="left_to_right" value="3"/>
        </attr>
    </declare-styleable>
</resources>